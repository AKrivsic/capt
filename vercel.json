{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    { "path": "/api/crons/daily", "schedule": "0 7 * * *" }
  ],
  "functions": {
    "src/app/api/video/upload-init/route.ts": {
      "maxDuration": 30
    },
    "app/api/**": {
      "runtime": "nodejs20.x",
      "architecture": "x64",
      "includeFiles": "node_modules/ffmpeg-static/**"
    }
  }
}
