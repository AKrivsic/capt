{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    { "path": "/api/crons/daily", "schedule": "0 7 * * *" }
  ],
  "functions": {
    "src/app/api/video/upload-init/**": {
      "maxDuration": 30
    },
    "src/app/api/video/generate/**": {
      "maxDuration": 60
    },
    "src/app/api/video/process/**": {
      "maxDuration": 30
    },
    "src/app/api/**": {
      "includeFiles": "vendor/ffmpeg/**"
    }
  }
}

